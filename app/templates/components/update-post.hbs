{{#if updatePostForm}}
<h4>Update Your Post</h4>
<div>
  <form>
    <div class="form-group">
      <label for="title">Title</label>
      {{input value=title id="title"}}
    </div>

    <div class="form-group">
      <label for="date">Date</label>
      {{input value=date id="date"}}
    </div>

    <div class="form-group">
      <label for="category">Category</label>
      {{input value=category id="category"}}
    </div>

    <div class="form-group">
      <label for="text">Text</label>
      {{input value=text id="text"}}
    </div>

    <div class="form-group">
      <label for="image">Image</label>
      {{input value=image id="image"}}
    </div>

    <div class="form-group">
      <label for="price">Price</label>
      {{input value=price id="price"}}
    </div>
    <button {{action 'update' post}}>Save</button>
  </form>
</div>
{{else}}
  <button {{action 'updatePostForm'}}>Update</button>
{{/if}}
